<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                x:Name="ResultLbl"
                Text="0"/>

            <FlexLayout
                Direction="RowReverse"
                Wrap="Wrap">
                <Button
                    Text="9"
                    Clicked="OnNumberPress"/>
                <Button
                    Text="8"
                    Clicked="OnNumberPress"/>
                <Button
                    Text="7"
                    Clicked="OnNumberPress"/>
                <Button
                    Text="6"
                    Clicked="OnNumberPress"/>
                <Button
                    Text="5"
                    Clicked="OnNumberPress"/>
                <Button
                    Text="4"
                    Clicked="OnNumberPress"/>
                <Button
                    Text="3"
                    Clicked="OnNumberPress"/>
                <Button
                    Text="2"
                    Clicked="OnNumberPress"/>
                <Button
                    Text="1"
                    Clicked="OnNumberPress"/>
                <Button
                    Text="00"
                    Clicked="OnNumberPress"/>
                <Button
                    Text="0"
                    Clicked="OnNumberPress"/>
                <Button
                    Text=","
                    Clicked="OnNumberPress"/>
            </FlexLayout>
            
            <Grid
                RowDefinitions="*,*"
                ColumnDefinitions="*,*,*,*"
                RowSpacing="5"
                ColumnSpacing="5">
                <Button
                    Text="+"
                    Clicked="OnOperatorPress"/>
                <Button
                    Text="-"
                    Clicked="OnOperatorPress"
                    Grid.Column="1"/>
                <Button
                    Text="x"
                    Clicked="OnOperatorPress"
                    Grid.Column="2"/>
                <Button
                    Text="/"
                    Clicked="OnOperatorPress"
                    Grid.Column="3"/>
                <Button
                    Text="&lt;--"
                    Clicked="OnBackspacePress"
                    Grid.Row="1"/>
                <Button
                    Text="C"
                    Grid.Row="1"
                    Grid.Column="1"
                    Clicked="OnClearPress"/>
                <Button
                    Text="="
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    Clicked="OnEqualsPress"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
